.log {
  width: 100%;
  text-align: center;
  padding: 7% 0 4% 0;
}

.weui-cell {
  position: initial;
}

.log .logoImg {
  width: 70%;
  height: 80px;
}

.userImg {
  width: 20px;
  height: 20px;
}

.login_input {
  border: 1px solid #d9d9d9;
  border-radius: 5px;
  margin: 3% 0%;
  font-size: 14px;
  background: #fff;
  padding: 6px 15px;
}

.login_input .weui-label {
  width: 35px;
  margin-top: 7px;
}

.weui-agree {
  padding: 0.5em 0px;
}

.login_page {
  width: 85%;
  margin: 0 auto;
}
